{
  "font": {
    "family": {
      "$type": "fontFamily",
      "base": {
        "$value": "Roboto, sans-serif"
      }
    },
    "weight": {
      "$type": "fontWeight",
      "light": {
        "$value": 300
      },
      "normal": {
        "$value": 400
